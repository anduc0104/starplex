<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cinema.starplex.ui.controllers.admin.usermanagement.AddnewUserController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox>
        <HBox spacing="10">
            <Button text="Back" onAction="#goBack"/>
            <Text layoutX="43.0" layoutY="14.0" text="Add new user"/>
        </HBox>
        <GridPane hgap="10" vgap="10">
            <!--fullname-->
            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label fx:id="fullNameError" layoutX="35.0" GridPane.rowIndex="1" layoutY="235.0" textFill="red"
                   style="-fx-font-size: 12px;"/>
            <!--username-->
            <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label fx:id="usernameError" layoutX="35.0" layoutY="235.0" GridPane.rowIndex="3" textFill="red"
                   style="-fx-font-size: 12px;"/>
            <!--email-->
            <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Label fx:id="emailError" layoutX="35.0" layoutY="235.0" GridPane.rowIndex="5" textFill="red"
                   style="-fx-font-size: 12px;"/>
            <!--password-->
            <Label text="Password:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            <Label fx:id="passwordError" layoutX="35.0" layoutY="235.0" GridPane.rowIndex="7" textFill="red"
                   style="-fx-font-size: 12px;"/>
            <!-- password confirmed -->
            <Label text="Password Confirmed:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordConfirmedField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
            <Label fx:id="passwordConfirmedError" layoutX="35.0" layoutY="235.0" GridPane.rowIndex="9" textFill="red"
                   style="-fx-font-size: 12px;"/>
            <!-- phone -->
            <Label text="Phone:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
            <Label fx:id="phoneError" layoutX="35.0" GridPane.rowIndex="11" layoutY="235.0" textFill="red"
                   style="-fx-font-size: 12px;"/>
            <!-- role -->
            <Label text="Role:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
            <ComboBox fx:id="roleComboBox" GridPane.rowIndex="12" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="admin"/>
                        <String fx:value="staff"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Label fx:id="roleError" layoutX="35.0" layoutY="235.0" GridPane.rowIndex="13" textFill="red"
                   style="-fx-font-size: 12px;"/>
        </GridPane>

        <Button text="Add User" onAction="#addUser"/>
    </VBox>
</AnchorPane>