<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cinema.starplex.ui.controllers.admin.RoomControllerView" stylesheets="@../../../../../css/room-admin.css">

    <Label text="Room Management" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TabPane VBox.vgrow="ALWAYS">
        <Tab text="Room Data" closable="false">
            <VBox spacing="10">
                <GridPane hgap="10" vgap="10">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                    <Label text="Room Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="roomNumberField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Total Seats:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="totalSeatsField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <HBox GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
                        <Button fx:id="saveButton" text="Save" onAction="#handleSaveButton" prefWidth="80"/>
                        <Button fx:id="updateButton" text="Update" onAction="#handleUpdateButton" prefWidth="80" disable="true"/>
                        <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteButton" prefWidth="80" disable="true"/>
                        <Button fx:id="clearButton" text="Clear" onAction="#handleClearButton" prefWidth="80"/>
                    </HBox>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                    <Label text="Search:"/>
                    <TextField fx:id="searchField" prefWidth="200" promptText="Search by room number or seats..."/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="Items per page:"/>
                    <ComboBox fx:id="pageSizeComboBox" prefWidth="80"/>
                </HBox>

                <VBox fx:id="tableContainer" VBox.vgrow="ALWAYS">
                    <TableView fx:id="roomTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="roomNumberColumn" text="Room Number" prefWidth="150"/>
                            <TableColumn fx:id="totalSeatsColumn" text="Total Seats" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </VBox>
        </Tab>

        <Tab text="Room Analytics" closable="false">
            <VBox spacing="10" fx:id="chartContainer">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                    <Label text="Chart Type:"/>
                    <ComboBox fx:id="chartTypeComboBox" prefWidth="150"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button text="Print Chart" onAction="#handlePrintChart"/>
                    <Button text="Export Chart" onAction="#handleExportChart"/>
                </HBox>

                <BarChart fx:id="roomChart" VBox.vgrow="ALWAYS">
                    <xAxis>
                        <CategoryAxis fx:id="xAxis" side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="yAxis" side="LEFT"/>
                    </yAxis>
                </BarChart>
            </VBox>
        </Tab>
    </TabPane>
</VBox>