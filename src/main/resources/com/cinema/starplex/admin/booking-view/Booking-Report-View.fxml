<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cinema.starplex.ui.controllers.admin.bookingManagement.BookingReportController"
            prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

        <VBox spacing="10" alignment="CENTER">
            <Label text="Booking Reports" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <HBox spacing="30" alignment="CENTER">
                <VBox alignment="CENTER" styleClass="stat-box">
                    <Label text="Total Bookings" styleClass="stat-label" />
                    <Label fx:id="totalBookingsLabel" text="0" styleClass="stat-value">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                </VBox>

                <VBox alignment="CENTER" styleClass="stat-box">
                    <Label text="Total Revenue" styleClass="stat-label" />
                    <Label fx:id="totalRevenueLabel" text="0.0" styleClass="stat-value">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                </VBox>

                <VBox alignment="CENTER" styleClass="stat-box">
                    <Label text="Average Booking Price" styleClass="stat-label" />
                    <Label fx:id="avgBookingPriceLabel" text="0.00" styleClass="stat-value">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>

        <HBox spacing="20">
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Bookings by Status" style="-fx-font-weight: bold;" />
                <PieChart fx:id="statusPieChart" title="Booking Status Distribution" VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Revenue by Status" style="-fx-font-weight: bold;" />
                <BarChart fx:id="revenueByStatusChart" title="Revenue Distribution by Status" VBox.vgrow="ALWAYS">
                    <xAxis>
                        <CategoryAxis label="Status" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Revenue ($)" />
                    </yAxis>
                </BarChart>
            </VBox>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="20" />
            </padding>
            <Label text="Generated on " />
            <Label text="{java.time.LocalDate.now()}" />
        </HBox>

    <stylesheets>
        <URL value="@../../../../../css/chart.css" />
    </stylesheets>
</AnchorPane>
