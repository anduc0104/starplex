<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.PieChart?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cinema.starplex.ui.controllers.BookingReportController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Label text="Booking Statistics" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <HBox spacing="20">
                <!-- PieChart: Trạng thái đặt chỗ -->
                <VBox>
                    <Label text="Booking Status Distribution"/>
                    <PieChart fx:id="statusPieChart" prefWidth="350" prefHeight="300"/>
                </VBox>

                <!-- BarChart: Doanh thu theo trạng thái -->
                <VBox>
                    <Label text="Revenue by Status"/>
                    <BarChart fx:id="revenueByStatusChart" prefWidth="350" prefHeight="300">
                        <xAxis>
                            <CategoryAxis label="Status"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Revenue"/>
                        </yAxis>
                    </BarChart>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
