<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinema.starplex.ui.controllers.admin.bookingManagement.BookingController">
    <VBox spacing="24" AnchorPane.bottomAnchor="24.0" AnchorPane.leftAnchor="24.0"
          AnchorPane.rightAnchor="24.0"
          AnchorPane.topAnchor="24.0">
        <HBox alignment="CENTER">
            <Text text="Booking Management" styleClass="titlePage" textAlignment="CENTER"/>
        </HBox>
        <HBox>
            <Button layoutX="33.0" layoutY="34.0" mnemonicParsing="false" onAction="#handleAdd"
                    prefHeight="30.0" prefWidth="75.0" styleClass="add-new-btn"
                    stylesheets="@../../../../../css/admin.css" text="Add" textFill="WHITE">
                <font>
                    <Font name="System Bold Italic" size="12.0"/>
                </font>
            </Button>
            <!--                                        Search Field &ndash;&gt;-->
            <TextField fx:id="searchField" layoutX="163.0" layoutY="34.0" prefHeight="30.0"
                       promptText="Search by Booking" styleClass="search"
                       stylesheets="@../../../../../css/admin.css"/>
        </HBox>

        <TableView fx:id="bookingTableView" layoutX="20.0" layoutY="86.0" prefHeight="546.0" prefWidth="1260.0"
                   styleClass="table" stylesheets="@../../../../../css/admin.css">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                <TableColumn fx:id="userColumn" prefWidth="150.0" text="User"/>
                <TableColumn fx:id="showtimeColumn" prefWidth="200.0" text="Showtime"/>
                <TableColumn fx:id="totalPriceColumn" prefWidth="100.0" text="Price"/>
                <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status"/>
                <TableColumn fx:id="createdAtColumn" prefWidth="150.0" text="Created At"/>
                <TableColumn fx:id="colAction" prefWidth="100.0" text="Action"/>
            </columns>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </TableView>
    </VBox>

</AnchorPane>
