<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cinema.starplex.ui.controllers.BookingController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="700.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Booking Management" textFill="#2e3f6d">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Label>
                <Separator prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Separator>
                <HBox prefHeight="150.0" prefWidth="980.0">
                    <children>
                        <VBox prefHeight="150.0" prefWidth="500.0" spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label prefWidth="100.0" text="ID:">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="idField" editable="false" prefHeight="30.0" prefWidth="350.0"
                                                   promptText="Auto-generated"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label prefWidth="100.0" text="User:">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="userComboBox" prefHeight="30.0" prefWidth="350.0"
                                                  promptText="Select User"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label prefWidth="100.0" text="Showtime:">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="showtimeComboBox" prefHeight="30.0" prefWidth="350.0"
                                                  promptText="Select Showtime"/>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                        <VBox prefHeight="150.0" prefWidth="500.0" spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label prefWidth="100.0" text="Price:">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="priceField" prefHeight="30.0" prefWidth="350.0"
                                                   promptText="Enter total price"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Label prefWidth="100.0" text="Status:">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="statusComboBox" prefHeight="30.0" prefWidth="350.0"
                                                  promptText="Select Status"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Button fx:id="createButton" mnemonicParsing="false"
                                                onAction="#handleCreateAction" prefHeight="30.0" prefWidth="80.0"
                                                style="-fx-background-color: #4caf50;" text="Create" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="12.0"/>
                                            </font>
                                        </Button>
                                        <Button fx:id="updateButton" disable="true" mnemonicParsing="false"
                                                onAction="#handleUpdateAction" prefHeight="30.0" prefWidth="80.0"
                                                style="-fx-background-color: #2196f3;" text="Update" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="12.0"/>
                                            </font>
                                        </Button>
                                        <Button fx:id="deleteButton" disable="true" mnemonicParsing="false"
                                                onAction="#handleDeleteAction" prefHeight="30.0" prefWidth="80.0"
                                                style="-fx-background-color: #f44336;" text="Delete" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="12.0"/>
                                            </font>
                                        </Button>
                                        <Button fx:id="clearButton" mnemonicParsing="false"
                                                onAction="#handleClearAction" prefHeight="30.0" prefWidth="80.0"
                                                style="-fx-background-color: #9e9e9e;" text="Clear" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="12.0"/>
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                    </children>
                </HBox>
                <Separator prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Separator>
                <HBox prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="500.0">
                            <children>
                                <Label text="Booking List" textFill="#2e3f6d">
                                    <font>
                                        <Font name="System Bold" size="18.0"/>
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="500.0">
                            <children>
                                <Button fx:id="reportButton" mnemonicParsing="false" onAction="#handleReportAction"
                                        prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #673ab7;"
                                        text="Show Report Chart" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <TableView fx:id="bookingTableView" prefHeight="350.0" prefWidth="980.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                        <TableColumn fx:id="userColumn" prefWidth="150.0" text="User"/>
                        <TableColumn fx:id="showtimeColumn" prefWidth="200.0" text="Showtime"/>
                        <TableColumn fx:id="totalPriceColumn" prefWidth="100.0" text="Price"/>
                        <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status"/>
                        <TableColumn fx:id="createdAtColumn" prefWidth="150.0" text="Created At"/>
                    </columns>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </TableView>
                <Separator prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Separator>
                <HBox prefHeight="75.0" prefWidth="980.0"
                      style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                    <children>
                        <VBox alignment="CENTER" prefHeight="75.0" prefWidth="490.0">
                            <children>
                                <Label text="Total Bookings" textFill="#2e3f6d">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="totalBookingsLabel" text="0" textFill="#2e3f6d">
                                    <font>
                                        <Font name="System Bold" size="24.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="75.0" prefWidth="490.0">
                            <children>
                                <Label text="Total Revenue" textFill="#2e3f6d">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="totalRevenueLabel" text="" textFill="#2e3f6d">
                                    <font>
                                        <Font name="System Bold" size="24.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
