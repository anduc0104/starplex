<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="1200.0" style="-fx-background-color: #10141b; -fx-padding: 20;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinema.starplex.ui.controllers.staff.SelectPaymentMethod">

    <center>
        <HBox alignment="CENTER" spacing="30">

            <!-- 🟢 Cột bên trái: Thông tin phim + Thông tin thanh toán -->
            <VBox spacing="20">

                <!-- 🟢 Thông tin phim -->
                <VBox spacing="15" style="-fx-background-color: #1A1D23; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                           text="Thông tin phim">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>
                    <Label style="-fx-text-fill: white;" text="Phim">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold;"
                           text="SÁT THỦ VÔ CÙNG CỰC HÀI - T16 ( Phụ đề )">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>

                    <HBox spacing="50">
                        <VBox>
                            <Label style="-fx-text-fill: white;" text="Ngày giờ chiếu">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="18:00 - 12/03/2025">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                        </VBox>
                        <VBox>
                            <Label style="-fx-text-fill: white;" text="Ghế">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="9">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                        </VBox>
                    </HBox>

                    <HBox spacing="50">
                        <VBox>
                            <Label style="-fx-text-fill: white;" text="Phòng chiếu">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="2">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- 🟢 Thông tin thanh toán -->
                <VBox spacing="15" style="-fx-background-color: #1A1D23; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                           text="Thông tin thanh toán">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>

                    <TableView fx:id="paymentTable" prefHeight="100"
                               style="-fx-background-color: transparent; -fx-border-color: #374151FF; -fx-border-radius: 10; -fx-padding: 5;">
                        <columns>
                            <TableColumn fx:id="categoryColumn" prefWidth="300"
                                         style="-fx-background-color: #1A1D23; -fx-border-radius: 10 10 0 0; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-alignment: CENTER-LEFT;"
                                         text="Danh mục"/>
                            <TableColumn fx:id="quantityColumn" prefWidth="100"
                                         style="-fx-background-color: #1A1D23; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-alignment: CENTER;"
                                         text="Số lượng"/>
                            <TableColumn fx:id="totalColumn" prefWidth="200"
                                         style="-fx-background-color: #1A1D23; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-alignment: CENTER-RIGHT;"
                                         text="Tổng tiền"/>
                        </columns>
                    </TableView>
                </VBox>
            </VBox>

            <!-- 🟢 Cột bên phải: Phương thức thanh toán -->
            <VBox alignment="TOP_CENTER" spacing="20"
                  style="-fx-background-color: #1A1D23; -fx-padding: 20; -fx-background-radius: 10; -fx-pref-width: 400;">

                <!-- 🏷️ Tiêu đề -->
                <Label style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                       text="Phương thức thanh toán">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>

                <!-- 🔘 Các phương thức thanh toán -->
                <!-- 🔵 VNPAY -->
                <HBox alignment="CENTER_LEFT" spacing="10"
                      style="-fx-background-color: #1A1D23; -fx-padding: 20; -fx-border-color: #374151FF; -fx-border-radius: 10;">

                    <!-- Radio Button -->
                    <RadioButton fx:id="vnpayRadio" style="-fx-text-fill: white; -fx-font-size: 14;"
                                 styleClass="custom-radio">
                        <toggleGroup>
                            <ToggleGroup fx:id="paymentMethods"/>
                        </toggleGroup>
                    </RadioButton>


                    <!-- Ảnh VNPAY -->
                    <ImageView fitHeight="15.0" fitWidth="50.0">
                        <image>
                            <Image url="@../../../../images/vnpay.png"/>
                        </image>
                    </ImageView>

                    <!-- Văn bản VNPAY -->
                    <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="VNPAY">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>
                    <stylesheets>
                        <URL value="@../../../../css/select-payment-method.css"/>
                    </stylesheets>

                </HBox>

                <!-- ⚫ Thanh toán trực tiếp -->
                <HBox alignment="CENTER_LEFT" spacing="10"
                      style="-fx-background-color: #1A1D23; -fx-padding: 20; -fx-border-color: #374151FF; -fx-border-radius: 10;">

                    <!-- Radio Button -->
                    <RadioButton style="-fx-text-fill: white; -fx-font-size: 14;" styleClass="custom-radio"
                                 toggleGroup="$paymentMethods"/>

                    <!-- Văn bản "Thanh toán trực tiếp" -->
                    <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Thanh toán trực tiếp">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>
                    <stylesheets>
                        <URL value="@../../../../css/select-payment-method.css"/>
                    </stylesheets>

                </HBox>

                <!-- 💰 Chi phí -->
                <VBox spacing="5">
                    <Label style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" text="Chi phí">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>

                    <HBox spacing="246">
                        <Label style="-fx-text-fill: white;" text="Thanh toán">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="80.000đ">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                    </HBox>

                    <HBox spacing="326">
                        <Label style="-fx-text-fill: white;" text="Phí">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="0đ">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                    </HBox>

                    <HBox spacing="248">
                        <Label style="-fx-text-fill: white;" text="Tổng cộng">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="80.000đ">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Label>
                    </HBox>
                </VBox>

                <!-- 🔴 Nút Thanh toán -->
                <Button style="-fx-background-color: #EF4444; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 20; -fx-pref-width: 500"
                        text="Thanh toán">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>

                <!-- 🔙 Nút Quay lại -->
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10; -fx-background-radius: 20; -fx-pref-width: 500"
                        text="Quay lại">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>

                <!-- ⚠️ Lưu ý -->
                <TextFlow>
                    <Text style="-fx-fill: #F97316FF; -fx-font-size: 13; -fx-font-weight: bold;" text="Lưu ý: "/>
                    <Text style="-fx-fill: #F97316FF; -fx-font-size: 13;"
                          text="Không mua vé cho trẻ em dưới 13 tuổi đối với các suất chiếu phim kết thúc sau 22h00 và không mua vé cho trẻ em dưới 16 tuổi đối với các suất chiếu phim kết thúc sau 23h00.">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Text>
                </TextFlow>
            </VBox>
        </HBox>
    </center>
</BorderPane>
