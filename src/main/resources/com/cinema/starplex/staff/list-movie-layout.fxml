<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cinema.starplex.ui.controllers.staff.ListMovieLayoutController"
            prefHeight="600.0" prefWidth="1200.0"
            style="-fx-background-color: #10141b; -fx-padding: 10;"
            stylesheets="@../../../../css/list-movie-layout.css">

    <ScrollPane fitToHeight="true" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"  style="-fx-background-color: transparent; -fx-background: transparent;"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="0"
    >
        <content>
            <GridPane fx:id="movieGrid"
                      alignment="TOP_CENTER"
                      hgap="20" vgap="20"
                      style="-fx-padding: 10;"
                      AnchorPane.topAnchor="10.0"
                      AnchorPane.bottomAnchor="50.0"
                      AnchorPane.leftAnchor="50.0"
                      AnchorPane.rightAnchor="50.0"
                      minHeight="1800">
                <!-- Các bộ phim sẽ được thêm vào đây từ mã điều khiển -->
            </GridPane>
        </content>
    </ScrollPane>
</AnchorPane>