<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="1200.0" style="-fx-background-color: #10141b; -fx-padding: 20;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinema.starplex.ui.controllers.staff.ScanPaymentCode">

    <center>
        <HBox alignment="CENTER" spacing="30">

            <!-- 🟢 Cột bên trái: Thông tin phim + Thông tin thanh toán -->
            <VBox spacing="20">

                <!-- 🟢 Thông tin phim -->
                <VBox spacing="15" style="-fx-background-color: #1A1D23; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                           text="Thông tin phim">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>
                    <Label style="-fx-text-fill: white;" text="Phim">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold;"
                           text="SÁT THỦ VÔ CÙNG CỰC HÀI - T16 ( Phụ đề )">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>

                    <HBox spacing="50">
                        <VBox>
                            <Label style="-fx-text-fill: white;" text="Ngày giờ chiếu">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="18:00 - 12/03/2025">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                        </VBox>
                        <VBox>
                            <Label style="-fx-text-fill: white;" text="Ghế">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="9">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                        </VBox>
                    </HBox>

                    <HBox spacing="50">
                        <VBox>
                            <Label style="-fx-text-fill: white;" text="Phòng chiếu">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="2">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- 🟢 Thông tin thanh toán -->
                <VBox spacing="15" style="-fx-background-color: #1A1D23; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                           text="Thông tin thanh toán">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>

                    <TableView fx:id="paymentTable" prefHeight="100"
                               style="-fx-background-color: transparent; -fx-border-color: #374151FF; -fx-border-radius: 10; -fx-padding: 5;">
                        <columns>
                            <TableColumn fx:id="categoryColumn" prefWidth="300"
                                         style="-fx-background-color: #1A1D23; -fx-border-radius: 10 10 0 0; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-alignment: CENTER-LEFT;"
                                         text="Danh mục"/>
                            <TableColumn fx:id="quantityColumn" prefWidth="100"
                                         style="-fx-background-color: #1A1D23; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-alignment: CENTER;"
                                         text="Số lượng"/>
                            <TableColumn fx:id="totalColumn" prefWidth="200"
                                         style="-fx-background-color: #1A1D23; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-alignment: CENTER-RIGHT;"
                                         text="Tổng tiền"/>
                        </columns>
                    </TableView>
                </VBox>
            </VBox>

            <!-- 🟢 Cột bên phải: Quét mã thanh toán VNPAY -->
            <VBox alignment="TOP_CENTER" spacing="20"
                  style="-fx-background-color: #1A1D23; -fx-padding: 20; -fx-background-radius: 10; -fx-pref-width: 400;">

                <!-- 🏷️ Tiêu đề -->
                <Label style="-fx-text-fill: white; -fx-font-size: 16;"
                       text="Quét mã thanh toán VNPAY">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>
                <!-- 📌 Logo VNPAY -->
                <ImageView fitWidth="80" fitHeight="25">
                    <image>
                        <Image url="@../../../../images/vnpay.png"/>
                    </image>
                </ImageView>

                <!-- 🏷️ Mã QR -->
                <ImageView fx:id="qrCodeImage" fitWidth="200" fitHeight="200"
                           style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;"/>

                <!-- ⏳ Thời gian thanh toán -->
                <Label text="Thời gian thanh toán 7:51"
                       style="-fx-text-fill: #3B82F6; -fx-font-size: 15;"/>

                <!-- ℹ️ Lưu ý -->
                <Label text="Lưu ý: Không sử dụng các ứng dụng không phải Ngân hàng, Ví điện tử để quét mã QR thanh toán như Zalo chat."
                       wrapText="true"
                       style="-fx-text-fill: #F97316FF; -fx-font-size: 13; -fx-text-alignment: center;"/>

                <!-- 📌 Thông tin đơn hàng -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Thông tin đơn hàng"
                           style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"/>

                    <HBox spacing="160">
                        <Label text="Số tiền thanh toán:" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                        <Label fx:id="amountLabel" text="170.000đ"
                               style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Tên tài khoản:" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                        <Label fx:id="accountNameLabel" text="TRUNG TAM CHIEU PHIM QUOC GIA"
                               style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;"/>
                    </HBox>

                    <HBox spacing="62">
                        <Label text="Tên ngân hàng:" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                        <Label fx:id="bankNameLabel" text="Ngân hàng TMCP Quan Doi"
                               style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;"/>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>